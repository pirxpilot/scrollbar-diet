{
  "manifest_version": 2,

  "name": "Scrollbar diet",
  "description": "Makes scrollbars thin and orange.",
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["scrollbars.css"]
    }
  ]
}

